<div class="showp">
<h3><%= @paciente.nome%></h3>
<p>Nome: <%= @paciente.nome %></p>
<p>Telefone: <%= @paciente.telefone %></p>
<p>Data de nacimento: <%= I18n.localize @paciente.nascimento %></p>
<p>Email: <%= @paciente.email %></p>
<p>Sexo: <%= @paciente.sexo %></p>
<p>Paciente desde:<%= I18n.localize @paciente.paciente_desde %></p>
<p>Status: <%= @paciente.actual_status %></p>
<p>Observação: <%= @paciente.observacao %></p>

<% unless @paciente.ultimo_preco.blank? %>
  <h4>Preço Atual</h4>
  <%= number_to_currency @paciente.preco.last.valor %>

  <h4>Histórico de preço</h4>
  <% @paciente.preco.order(id: :desc).each do |preco| %>
    <p><%= number_to_currency preco.valor %></p>
  <% end %>
<% else %>
  <p>Nenhum preço cadastrado</p>
<%end%>


<%= link_to 'Cadastrar Preço', new_paciente_preco_path(params[:id]),:class => "mdl-button mdl-js-button mdl-button--primary"%>


  <%= link_to 'Editar', edit_paciente_path,:class => "mdl-button mdl-js-button mdl-button--accent" %>
  </div>
